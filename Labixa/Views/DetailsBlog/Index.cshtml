<section class="blog-sidebar-area leftbar section-padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 col-lg-10">
                @if (Model != null && Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        <div class="single-news-block">
                            <div class="single-news">
                                <figure title="@item.Title"><img alt="Img" src="@item.BlogImage_Default"></figure>

                                <div class="blog-content">
                                    <h4><a href="/blog/@item.Slug">@item.Title</a></h4>
                                    <p>@slitString.TruncateAtWord(item.Description, 100)</p>
                                    <a class="read-text" href="/DetailsBlog/@item.Slug">Continue Reading</a>
                                </div>
                            </div>
                        </div>
                    }
                }
                <!-- Start Pagination Area -->
                <!-- End Pagination Area -->
            </div>
        </div>
        <div class="pagination-block text-center">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    @Html.PagedListPager(Model, page => Url.Action("Index", "DetailsBlog", new { page}))
                </ul>
            </nav>
        </div>
    </div>
    @*@Html.PagedListPager(Model, page => Url.Action("Index", "DetailsBlog", new { page }))*@
