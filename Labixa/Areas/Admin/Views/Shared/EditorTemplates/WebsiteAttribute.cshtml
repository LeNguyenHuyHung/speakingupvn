@using Outsourcing.Core
@model Outsourcing.Data.Models.WebsiteAttribute
@{
    var template = "";
    if (Model.ControlType.ToLower() == "textarea")
    {
        template = "Ckeditor";
    }
    else if (Model.ControlType.ToLower() == "image")
    {
        template = "GetImageFromElfinder";
    }
    else if (Model.ControlType.ToLower() == "checkbox")
    {
        template = "CheckBox";
    }
}
    <div class="form-group ">
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Name)
        @Html.HiddenFor(model => model.Description)
        @Html.HiddenFor(model => model.Type)
        @Html.HiddenFor(model => model.ControlType)
        @Html.HiddenFor(model => model.Deleted)
        @if (Model.Type != "Logo")
        {

            <div class="col-sm-3 control-label no-padding-right">
                <label class="col-sm-12 control-label no-padding-right" for="">
                    @Model.Description
                </label>
                <label class="col-sm-12 control-label no-padding-right" for="">
                    Kích hoạt:
                    @Html.EditorFor(model => model.IsPublic)
                </label>
            </div>
            <div class="col-sm-9">
                @Html.EditorFor(model => model.Value, template)
                @Html.ValidationMessageFor(model => model.Value)
            </div>
        }
        else
        {
            <div class="col-sm-3 control-label no-padding-right">
                <label class="col-sm-12 control-label no-padding-right" for="">
                    @Model.Description
                </label>
                <label class="col-sm-12 control-label no-padding-right" for="">
                    Kích hoạt:
                    @Html.EditorFor(model => model.IsPublic)
                </label>
            </div>
            <div class="col-sm-9">
                @Html.EditorFor(model => model.Value, template)
                @Html.ValidationMessageFor(model => model.Value)
            </div>

            //Name
            <div class="col-sm-3 control-label no-padding-right">
                <label class="col-sm-12 control-label no-padding-right" for="">
                    Name
                </label>
            </div>
            <div class="col-sm-9">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>

            //Alt
            <div class="col-sm-3 control-label no-padding-right">
                <span style="float: left;font-size: 16px;display: block;left: -32px;top: 31px;position: relative;">Alt</span>
            </div>
            <div class="col-sm-9" style="float:right!important">
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>

            //LinkUrl
            <div class="col-sm-3 control-label no-padding-right">
                
                <span style="font-size: 16px;display: block;top: 31px;position: relative;">LinkUrl</span>  
               
            </div>
            <div class="col-sm-9" style="float:right!important">
                @Html.EditorFor(model => model.LinkUrl)
                @Html.ValidationMessageFor(model => model.LinkUrl)
            </div>

        }
    </div>
